<section>
{{#if posts.length}}
  <ol>
    {{#each posts as |post|}}
    <li>
      <a href="/dashboard/edit/{{post.id}}">
        <div class="card">
          <div class="card-header">
            <h4>{{post.title}}</h4>
            <p>Posted by {{post.user_id}} on {{post.created-at}}</p>
          </div>
          <p>{{post.content}}</p>
        </div>
      </a>
    </li>
    {{/each}}
  </ol>
{{else}}
    <h3>No posts have been made.</h3>
{{/if}}
</section>
